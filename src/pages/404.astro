---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Sayfa Bulunamadı - SEO News" description="Aradığınız sayfa bulunamadı.">
  <div class="min-h-[50vh] flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-9xl font-bold text-primary">404</h1>
      <p class="mt-4 text-2xl font-semibold text-secondary">Sayfa Bulunamadı</p>
      <p class="mt-2 text-gray-600">Aradığınız sayfa taşınmış veya silinmiş olabilir.</p>
      <div class="mt-8">
        <a
          href="/"
          class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
        >
          Ana Sayfaya Dön
        </a>
      </div>
      <div class="mt-12">
        <h2 class="text-lg font-semibold text-secondary">Önerilen Sayfalar:</h2>
        <ul class="mt-4 space-y-2">
          <li>
            <a href="/" class="text-primary hover:text-primary/80">Ana Sayfa</a>
          </li>
          <li>
            <a href="/kategori/siyaset" class="text-primary hover:text-primary/80">
              Siyaset Haberleri
            </a>
          </li>
          <li>
            <a href="/kategori/ekonomi" class="text-primary hover:text-primary/80">
              Ekonomi Haberleri
            </a>
          </li>
          <li>
            <a href="/kategori/dunya" class="text-primary hover:text-primary/80">
              Dünya Haberleri
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</MainLayout> 